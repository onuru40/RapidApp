@model RapidApp.Models.SearchHotelsRequest
@{
    Layout = null;
}
<!doctype html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hotel Reservation</title>

    <!-- styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link href="~/hotel-reservation-template-main/css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- topbar -->
    <section class="topbar bg-dark py-2 border-bottom border-dark">
        <div class="container d-flex justify-content-between text-white">
            <p class="mb-0">Rezervasyon için hemen arayın: <a href="tel:1234567890" class="text-white">1234567890</a></p>
            <p class="mb-0"><a href="#" class="text-white">TR</a> | <a href="#" class="text-white">EN</a></p>
        </div>
    </section>

    <!-- header -->
    <section class="header">
        <nav class="navbar navbar-expand-lg bg-transparent">
            <div class="container">
                <a class="navbar-brand" href="#"><img src="img/logo.jpg" class="img-fluid logo" alt="Logo"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </section>

    <!-- hero with form -->
    <section class="hero d-flex align-items-center" style="min-height: 100vh;">
        <div class="container">
            <div class="text-center text-white mb-5">
                <h1 class="display-5 fw-bold hero-title">Hayalinizdeki Oteli Bulun</h1>
                <p class="fs-5 hero-subtitle">Şehir, tarih ve kişi bilgilerini girerek uygun otelleri kolayca keşfedin.</p>
            </div>

            <div class="bg-white bg-opacity-75 rounded-3 shadow-lg p-4 p-md-5">
                <form asp-action="SearchHotels" method="post">
                    <div class="row g-4">
                        <div class="col-md-3">
                            <label class="form-label text-dark fw-semibold">Giriş Tarihi</label>
                            <input asp-for="ArrivalDate" type="date" class="form-control form-control-lg" />
                            <span class="text-danger" asp-validation-for="ArrivalDate"></span>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label text-dark fw-semibold">Çıkış Tarihi</label>
                            <input asp-for="DepartureDate" type="date" class="form-control form-control-lg" />
                            <span class="text-danger" asp-validation-for="DepartureDate"></span>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label text-dark fw-semibold">Şehir veya Ülke</label>
                            <input asp-for="Location" type="text" class="form-control form-control-lg" placeholder="Örn: Ankara" />
                            <span class="text-danger" asp-validation-for="Location"></span>
                        </div>

                        <div class="col-md-3">
                            <div class="row g-2">
                                <div class="col-6">
                                    <label class="form-label text-dark fw-semibold">Yetişkin</label>
                                    <input asp-for="Adults" type="number" class="form-control form-control-lg" min="1" max="10" />
                                    <span class="text-danger" asp-validation-for="Adults"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label text-dark fw-semibold">Çocuk</label>
                                    <input asp-for="ChildrenAge" type="number" class="form-control form-control-lg" min="0" max="5" />
                                    <span class="text-danger" asp-validation-for="ChildrenAge"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 text-center mt-3">
                            <button type="submit" class="btn btn-orange btn-lg px-5 py-2 rounded-pill shadow-sm">
                                <i class="fas fa-search me-2"></i> Uygun Otelleri Listele
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- validation scripts -->
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
